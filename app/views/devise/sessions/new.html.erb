
<div class="modal-content modal-login">
  <h2><span class="login_title">Log in</span></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
           <%= f.input :email,
                required: false,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "search-email", placeholder: "Email"} %>
            <%= f.input :password,
                required: false,
                label:false,
                input_html: { autocomplete: "current-password", class: "search-password",  placeholder: "Password" } %>
      </div>
  <div class="form-actions">
    <%= f.button :submit, "LOG IN" %>
  </div>
<% end %>
</div>

