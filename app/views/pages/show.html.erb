<div class="profile-container">
     <%= cl_image_tag(current_user.photo, width: 250, height: 250, crop: :thumb, class: "profile-pic") %>

     <div class="card-block">
      <p>
        <strong><%= current_user.first_name.capitalize %></strong>
      </p>
     </div>
</div>
<div class="favourite-section">
  <h1>Favourites</h1>
  <% @favourites_user.each do |favourite| %>
    <% if favourite.hike.photo.present? %>
      <%= cl_image_tag( favourite.hike.photo, height: 236, width: 248, crop: :fill, class: "hike-photo"  )%>
      <h4 class="hike-name-profile"><%= favourite.hike.name.capitalize %></h4>
      <div class="hike-infos">
          <ul>
            <li>
            <%=image_tag("trekking.svg", class: "hike-icon") %> <span><%= favourite.hike.category.capitalize %></span>
            </li>
            <li>
              <% if favourite.hike.length < 60 %>
              <%= favourite.hike.length %> mins
              <% elsif (favourite.hike.length >= 60 && favourite.hike.length % 60 == 0) %>
              <p><%= favourite.hike.length / 60 %> hrs</p>
              <% else %>
              <%=  favourite.hike.length / 60 %> hrs and <%= favourite.hike.length % 60 %> mins
              <% end %>
            </li>
            <li>
            <%=image_tag("distance.svg", class: "hike-icon") %><span><%= favourite.hike.km %>km</span>
            </li>
            </ul>
    <% end %>
  <% end %>
  </div>
</div>

<h1>Reviews</h1>
    <% @reviews_user.each do |review| %>
  <div class="review-card">
    <img class="review-avatar" src= <%= review.user.photo %> >
    <h2> <%= review.user.first_name %></h2>
    <h3><%= review.content %></h3>
    <div class="rating-review">
    <% review.stars.to_i.times do  %>
    <span class="glyphicon glyphicon-star"></span>
    <% end %>
    <% review.blank_stars.to_i.times do %>
    <span class="glyphicon glyphicon-star-empty"></span>
    <% end %>
    <button type="button" class="btn btn-link"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, hike_review_path(hike_id: review.hike.id, id: review.id), method: :delete, data: {confirm: "Are you sure you want to delete this review?"}  %></button>
    </div>
    </div>
    <% end %>

