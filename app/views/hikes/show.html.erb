<div class="container">
  <div class="card-trip">
    <%= cl_image_tag @hike.photo, height: 300, width: 400, crop: :fill if @hike.photo.present? %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @hike.name.capitalize %></h2>
        <p>Category: <%= @hike.category.capitalize %></p>
        <p><%= @hike.description.capitalize %></p>
      </div>
    </div>
  <div class="container">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add to Favorites</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">Add to favorites</h1>
          </div>
          <div class="modal-body">
            <p>This will add the current hike to your favorites.</p>
          </div>
          <div class="modal-footer">
        <button type="button" class="btn btn-default" id="modal-btn-fav">Confirm</button>
        <button type="button" class="btn btn-primary" id="modal-btn-no">Cancel</button>
          </div>
        </div>

      </div>
    </div>
    <div class="alert" role="alert" id="result" color="black"></div>
  </div>
    <div class="container">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myDirections">Get Directions</button>

    <!-- Modal -->
    <div class="modal fade" id="myDirections" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">Directions</h1>
          </div>
          <div class="modal-body">
            <p>Get Directions.</p>
            <iframe
              width="500"
              height="500"
              frameborder="0"
              scrolling="no"
              marginheight="0"
              marginwidth="0"
              src="https://maps.google.com/maps?q=<%= @hike.latitude %>,<%= @hike.longitude %>&hl=es;z=14&amp;output=embed"
             >
             </iframe>
 <br />
 <small>
   <a
    href="https://maps.google.com/maps?q=<%= @hike.latitude %>,<%= @hike.longitude %>&hl=es;z=14&amp;output=embed"
    style="color:#0000FF;text-align:left"
    target="_blank"
   >
     Click here to get directions to the hike
   </a>
 </small>
          </div>
          <div class="modal-footer">
         <button type="button" class="btn btn-default" id="modal-btn-directions-close">Close</button>
          </div>
        </div>

      </div>
    </div>
    <div class="alert" role="alert" id="result2" color="black"></div>
  </div>

  <% @hike.reviews.each do |review| %>
   <!--  <img src= <%= review.user.photo %>> -->
    <p>First name: <%= review.user.first_name %></p>
    <p>Last name: <%= review.user.last_name %></p>
    <p>Comment: <%= review.content %></p>
    <p>Start: <%= review.stars %></p>

  <% end %>
</div>
