<div class="box-blue"></div>
<div class="show-name"><%= @hike.name.capitalize %></div>
<%= cl_image_tag(@hike.photo, crop: :fill, class: "show-photo") if @hike.photo.present? %>
<div class="show-info">
  <div class="show-category">
    <p><%= @hike.city %></p>
    <p><%= @hike.length %>hrs</p>
    <p><%= @hike.km %>km</p>
    <p>What to bring</p>
  </div>
  <div class="show-icon">
    <%= render 'favourites/form', hike: @hike, favourite: @favourite %>
  </div>
</div>
<div class="show-description">
  <p><%= @hike.description.capitalize %></p>
</div>




  <div class="container">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">WHAT TO BRING ?</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content modal-style">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">What to bring:</h1>
            <div class="what-to-bring">
              <div class="input">
              <input type="checkbox" name="shoes" value="Shoes" id="shoes"> SHOES<br>
              </div>
              <div class="input">
              <input type="checkbox" name="water" value="Water" id="water"> WATER<br>
              </div>
              <div class="input">
              <input type="checkbox" name="food" value="Food" id="food"> FOOD<br>
              </div>
              <div class="input">
              <input type="checkbox" name="camera" value="Camera" id="camera"> CAMERA<br>
              </div>
              <div class="input">
              <input type="checkbox" name="your_date" value="Your_date" id="date"> YOUR DATE<br>
              </div>
            </div>

              <p>YOU ARE <span class="counter"></span> READY FOR YOUR HIKE.</p>
                <div id="progress" style="background-color: rgba(222, 213, 196, 0.5); width: 100; height: 20px">
                  <div id="dontProgress" style="background-color: #EF7E56; width: 0%; height: 20px"></div>
                </div>
          </div>
      </div>
    </div>
    <div class="alert" role="alert" id="result" color="black"></div>
  </div>
    <div class="container">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myDirections">Get Directions</button>

    <!-- Modal -->
    <div class="modal fade" id="myDirections" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">Directions</h1>
          </div>
          <div class="modal-body">
            <p>Get Directions.</p>
            <iframe
              width="500"
              height="500"
              frameborder="0"
              scrolling="no"
              marginheight="0"
              marginwidth="0"
              src="https://maps.google.com/maps?q=<%= @hike.latitude %>,<%= @hike.longitude %>&hl=es;z=14&amp;output=embed"
             >
             </iframe>
 <br />
 <small>
   <a
    href="https://maps.google.com/maps?q=<%= @hike.latitude %>,<%= @hike.longitude %>&hl=es;z=14&amp;output=embed"
    style="color:#0000FF;text-align:left"
    target="_blank"
   >
     Click here to get directions to the hike
   </a>
 </small>
          </div>
          <div class="modal-footer">
         <button type="button" class="btn btn-default" id="modal-btn-directions-close">Close</button>
          </div>
        </div>

      </div>
    </div>

    <div class="alert" role="alert" id="result2"></div>

<div class="review-card">

</div>


  <% @hike.reviews.each do |review| %>
  <img src= <%= review.user.photo %>
    <p>First name: <%= review.user.first_name %></p>
    <p>Last name: <%= review.user.last_name %></p>
    <p>Comment: <%= review.content %></p>
    <p>Start: <%= review.stars %></p>

  <% end %>
</div>
