<div class="container">
  <div class="card-trip">
    <div class="card-trip-infos">
      <div>
        <h2><%= @hike.name.capitalize %></h2>
          <%= cl_image_tag @hike.photo, height: 300, width: 400, crop: :fill if @hike.photo.present? %>
        <p>City: <%= @hike.city.capitalize %></p>
        <p>Length: <%= @hike.length %> hours</p>
        <p>Distance: <%= @hike.km %> kms</p>
        <p>Description: <%= @hike.description.capitalize %></p>
      </div>
    </div>
  <div class="container">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">WHAT TO BRING ?</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">What to bring:</h1>
              <input type="checkbox" name="shoes" value="Shoes" id="shoes"> SHOES<br>
              <input type="checkbox" name="water" value="Water" id="water"> WATER<br>
              <input type="checkbox" name="food" value="Food" id="food"> FOOD<br>
              <input type="checkbox" name="camera" value="Camera" id="camera"> CAMERA<br>
              <input type="checkbox" name="your_date" value="Your_date" id="date"> YOUR DATE<br>

              <p>YOU ARE <span class="counter"></span> READY FOR YOUR HIKE.</p>
                <div id="progress" style="background-color: grey; width: 100; height: 20px">
                  <div id="dontProgress" style="background-color: red; width: 0%; height: 20px"></div>
                </div>
          </div>
      </div>
    </div>
    <div class="alert" role="alert" id="result" color="black"></div>
  </div>

  <% @hike.reviews.each do |review| %>
   <!--  <img src= <%= review.user.photo %>> -->
    <p>First name: <%= review.user.first_name %></p>
    <p>Last name: <%= review.user.last_name %></p>
    <p>Comment: <%= review.content %></p>
    <p>Start: <%= review.stars %></p>

  <% end %>
</div>
